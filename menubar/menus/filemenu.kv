#:kivy 1.9.1    
#:import Factory kivy.factory.Factory

#:set color_button (1, 1, 1, 1)  # brown
#:set color_button_pressed (0.7, 0.73, 0.78, 1)  # darker brown
#:set color_font   (1, 1, 1, 1)  # off white

<FMSpinnerOption@SpinnerOption>:
    background_color: color_button if self.state == 'normal' else color_button_pressed

    color: color_font
    border: [16, 16, 16, 16]
    
            
<FileMenu>:
    text: 'File'
    size_hint_y: 1
    size_hint_x: None
    width: 90

    values: root.values
    background_color: color_button if self.state == 'normal' else color_button_pressed
    option_cls: Factory.get("FMSpinnerOption")
