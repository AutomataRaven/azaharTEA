<RightClickMenu>:

    title: "Right Click Menu"
    
    size_hint: (None, None)
    size: (200, 200)
    show_arrow: False
    
    padding: 0, 0
    
    BoxLayout:
        
        orientation: "vertical"
        size_hint_y: 1
        size_hint_x: 1
        
        padding: 0,0
        
        BubbleButton:
            text: "Copy"
            padding: 0, 0
            on_release: root.copy()
        BubbleButton:
            text: "Paste"
            padding: 0, 0
            on_release: root.paste()            
        BubbleButton:
            text: "Cut"
            padding: 0, 0
            on_release: root.cut()            
        BubbleButton:
            padding: 0, 0
            text: "Select All"
            on_release: root.select_all()            
