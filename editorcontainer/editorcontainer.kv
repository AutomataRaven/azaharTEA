#:kivy 1.9.1
#:set color_button (0.5, 0.5, 0.5, 1)  
#:set color_button_pressed (0, 0, 0, 1)  

<StripLayout>:

    canvas.before:
        Color:
            rgba: (.6, .62, .64, 1)
        Rectangle:
            size: root.size
            pos: self.pos

                            
<EditorTab>:    
            
    text: 'New'
         
    size_hint_x: 1
    size_hint_Y: 1
    
    background_color: color_button if self.state == 'normal' else color_button_pressed 
    
    BoxLayout:
        pos: root.pos
        size_hint: None, None
        size: root.size
        BoxLayout:
            size_hint: None, 1
            orientation: 'vertical'
            width: 22
            Button:
                background_color: root.background_color if self.state == 'normal' else color_button_pressed
                padding: 0, 0
                text: 'x'
                border: [-1, -1, -1, -1]
                on_release: root.close_editor_tab(self)
     
<EditorTabContent>: 

    line_numbers_strip: line_numbers_strip
    editor: editor
    
    size_hint_x: 1
    size_hint_y: 1
                            
                       
    orientation: 'horizontal'
        
                        
    LineNumbersStrip:
        id: line_numbers_strip
                                
    Editor:
        id: editor
                        
<EditorContainer>:
                
    size_hint_x: 1
    size_hint_y: 1
                                     
    background_image: ''
        
    do_default_tab: False  
            
    background_color: [0,0,0,1]       
