#:kivy 1.9.1
#:import get_color_from_hex kivy.utils.get_color_from_hex

<EditorTab>:    
     
    line_numbers_strip: line_numbers_strip
    editor: editor
             
    text: 'New'
            
    BoxLayout:
            
        orientation: 'horizontal'
                
        LineNumbersStrip:
            id: line_numbers_strip
                
        Editor:
            id: editor
                    
<EditorContainer>:
      
    default_editor_tab: default_editor_tab
           
    size_hint_x: 1
    size_hint_y: 1
                                     
    background_image: ''
        
    do_default_tab: False  
            
    background_color: [0,0,0,1]
        
    EditorTab:
        id: default_editor_tab
